<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('./partials/nav.ejs') %> 
    <div class="messages">
      <% if (messages.length !== 0) { %>
        <% messages.forEach((message) => { %>  
          <div class="message-item">
            <h4 class='title'><%= message.text %></h4>
            <p class='user'><%= message.user %> </p>
          </div>
        <% }) %>
      <% } %>  
    </div>  
  </body>
</html>
